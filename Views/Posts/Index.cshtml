@model IEnumerable<PostMe.Models.Post>;
@{
    ViewData["Title"] = "My Posts";
}

<div class="container">
    @if (Model.Count() > 0)
    {
        foreach (var post in Model)
        {
            <div class="col-12 p-3 text-center mt-4">
                <div class="row p-2 bg-dark text-white">
                    <div class="col-4">
                        <p>@post.UserName</p>
                    </div>
                    <div class="col-4">
                        <p>@post.Title</p>
                    </div>
                    <div class="col-4">
                        <p>@post.Date.ToShortDateString()</p>
                    </div>
                </div>
                <div class="row p-4 bg-secondary text-white text-left">         
                        <p>@post.Content </p>
                </div>
                <div class="row bg-dark text-white text-center p-2">
                    <div class="col-4 btn-group">
                        <a class="btn btn-info m-1" asp-controller="Posts" asp-action="Update" asp-route-Id="@post.Id">Update</a>
                        <a class="btn btn-danger m-1" asp-controller="Posts" asp-action="Delete" asp-route-Id="@post.Id">Delete</a>
                    </div>
                </div>
            </div>
             
        }
    }
    else
    {
        <p>You have not created any post yet</p>
        <p>You can do this <a asp-action="Create">here</a></p>

    }
</div>